<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:viewmodels="clr-namespace:Daily.ViewModels"
    xmlns:converters="clr-namespace:Daily.Converters"
    x:DataType="viewmodels:GoalEditPageViewModel"
    x:Class="Daily.Pages.GoalEditPage">

    <ContentPage.Resources>

        <ResourceDictionary>

            <converters:DateOnlyToDateTimeConverter
                x:Key="DateOnlyToDateTimeConverter"/>

            <Style TargetType="Border" x:Key="DeadlineDatePickerBorder">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="Stroke" Value="Black"/>
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="WidthRequest" Value="{StaticResource DefaultElementWidth}"/>
                <Setter Property="HorizontalOptions" Value="Start"/>
            </Style>

            <Style TargetType="DatePicker" x:Key="DeadlineDatePicker">
                <Setter Property="Format" Value="d"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

        </ResourceDictionary>
        
    </ContentPage.Resources>
    
    <Grid
        ColumnDefinitions="*"
        RowDefinitions="Auto, *">

        <VerticalStackLayout
            Spacing="15"
            Padding="{StaticResource RootPadding}"
            Grid.Column="0"
            Grid.Row="0">

            <Label
                Style="{StaticResource LongHeadline}"
                Text="Изменение цели"
                Margin="{StaticResource HeadlineMargin}"/>

            <VerticalStackLayout
                Style="{StaticResource TaskFieldStackLayout}">

                <Label
                    Style="{StaticResource TaskFieldHeader}"
                    Text="Цель"/>

                <Entry
                    Style="{StaticResource FieldEntry}"
                    Placeholder="Напишите цель"
                    Text="{Binding Goal, Mode=TwoWay}"/>
            </VerticalStackLayout>

            <VerticalStackLayout
                Style="{StaticResource TaskFieldStackLayout}">

                <Label
                    Style="{StaticResource TaskFieldHeader}"
                    Text="Дедлайн (необязат.)"/>

                <Border
                    Style="{StaticResource DeadlineDatePickerBorder}">

                    <DatePicker
                        Style="{StaticResource DeadlineDatePicker}"
                        IsEnabled="{Binding NeedDeadline}"
                        MinimumDate="{Binding MinimumDeadlineDate, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                        Date="{Binding Deadline, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"/>
                </Border>

                <HorizontalStackLayout
                    Spacing="5">

                    <Label
                        FontSize="14"
                        Text="Дедлайн нужен"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"/>

                    <CheckBox
                        IsChecked="{Binding NeedDeadline, Mode=TwoWay}"
                        Color="Black"
                        Scale="1.2"
                        VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>

        <Button
            IsEnabled="{Binding CanSave}"
            Style="{StaticResource TaskBottomButton}"
            Text="Сохранить"
            Command="{Binding SaveCommand, Mode=OneTime}"
            Grid.Column="0"
            Grid.Row="1"/>
    </Grid>
</ContentPage>