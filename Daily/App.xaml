<?xml version = "1.0" encoding = "UTF-8" ?>
<Application 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Daily.Converters"
    xmlns:local="clr-namespace:Daily"
    x:Class="Daily.App">
    
    <Application.Resources>
    
        <ResourceDictionary>

            <Thickness x:Key="RootPadding">0, 40, 0, 0</Thickness>
            
            <Thickness x:Key="HeadlineMargin">20, 0, 0, 0</Thickness>
            
            <Thickness x:Key="DummyLabelMargin">0, 30, 0, 0</Thickness>

            <x:Double x:Key="DefaultElementWidth">350</x:Double>
            <x:Double x:Key="ShorterElementWidth">330</x:Double>

            <converters:BoolToColorConverter
                x:Key="IsEditModeToColorConverter"
                TrueColor="{StaticResource Save}"
                FalseColor="{StaticResource Good}"/>

            <converters:BoolToStringConverter
                x:Key="IsEditModeToTextConverter"
                TrueString="Сохранить"
                FalseString="Изменить"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>

</Application>
