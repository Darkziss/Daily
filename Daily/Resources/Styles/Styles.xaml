<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="Black"/>
        <Setter Property="IsRunning" Value="True"/>
    </Style>

    <Style TargetType="ActivityIndicator" x:Key="DummyActivityIndicator">
        <Setter Property="Color" Value="Black"/>
        <Setter Property="WidthRequest" Value="30"/>
        <Setter Property="HeightRequest" Value="30"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="Black"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="BottomButton">
        <Setter Property="FontSize" Value="27"/>
        <Setter Property="WidthRequest" Value="230"/>
        <Setter Property="HeightRequest" Value="45"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Button" x:Key="TaskBottomButton" BasedOn="{StaticResource BottomButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource Good}"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="Margin" Value="0, 0, 0, 20"/>
    </Style>

    <Style TargetType="ImageButton">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver"/>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="ImageButton" x:Key="ActionButton">
        <Setter Property="BackgroundColor" Value="{StaticResource Hover}"/>
        <Setter Property="Aspect" Value="AspectFill"/>
        <Setter Property="WidthRequest" Value="50"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TitleColor" Value="Black"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource InputField}"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Keyboard" Value="Text"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="Gray"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Editor" x:Key="RecordTextEditor">
        <Setter Property="BackgroundColor" Value="{StaticResource FieldBackground}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Placeholder" Value="Начните печатать.."/>
        
        <Setter Property="VerticalOptions" Value="Fill"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Margin" Value="5, 0, 5, 0"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource InputField}"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Keyboard" Value="Text"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="Entry" x:Key="FieldEntry">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Placeholder" Value="Введите действие"/>
        <Setter Property="MaxLength" Value="50"/>
        <Setter Property="WidthRequest" Value="350"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <Style TargetType="Border">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10, 10, 10, 10"/>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="HasShadow" Value="False"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style TargetType="Frame" x:Key="ModificatorCard">
        <Setter Property="HeightRequest" Value="25"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <Style TargetType="Frame" x:Key="RecordCard">
        <Setter Property="InputTransparent" Value="True"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Hover}"/>
        <Setter Property="WidthRequest" Value="170"/>
        <Setter Property="HeightRequest" Value="200"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="Start"/>

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Hover}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Label" x:Key="TaskFieldHeader">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="WidthRequest" Value="350"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <Style TargetType="Label" x:Key="RecordHeaderLabel">
        <Setter Property="FontFamily" Value="NunitoBold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="HeightRequest" Value="30"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="Margin" Value="0, 5, 0, 0"/>
    </Style>

    <Style TargetType="Label" x:Key="RecordContentLabel">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource InputField}"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="HeightRequest" Value="170"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="MaxLines" Value="7"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
    </Style>

    <Style TargetType="Label" x:Key="SymbolCounterLabel">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Frame" x:Key="BottomPanel">
        <Setter Property="BackgroundColor" Value="{StaticResource PanelBackground}"/>
        <Setter Property="BorderColor" Value="{StaticResource Gray}"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="HeightRequest" Value="80"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
    </Style>

    <Style TargetType="Span">
        <Setter Property="TextColor" Value="White"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="LineBreakMode" Value="WordWrap"/>
    </Style>

    <Style TargetType="Label" x:Key="Headline">
        <Setter Property="FontFamily" Value="NunitoBold"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <Style TargetType="Label" x:Key="LongHeadline" BasedOn="{StaticResource Headline}">
        <Setter Property="FontSize" Value="30"/>
    </Style>

    <Style TargetType="Label" x:Key="SubHeadline" BasedOn="{StaticResource Headline}">
        <Setter Property="FontSize" Value="23"/>
    </Style>

    <Style TargetType="Label" x:Key="ModificatorLabel">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Fill"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Margin" Value="7, 0, 7, 0"/>
    </Style>

    <Style TargetType="Label" x:Key="ActionButtonLabel">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Label" x:Key="EmptyViewLabel">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Text" Value="Пока здесь пусто"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <Style TargetType="CollectionView" x:Key="RecordCollectionView">
        <Setter Property="ItemSizingStrategy" Value="MeasureFirstItem"/>
        <Setter Property="ItemsUpdatingScrollMode" Value="KeepItemsInView"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="HeightRequest" Value="580"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="Margin" Value="20, 20, 20, 0"/>

        <Setter Property="ItemsLayout">
            <GridItemsLayout
                Span="2"
                Orientation="Vertical"
                VerticalItemSpacing="10"
                HorizontalItemSpacing="10"/>
        </Setter>
    </Style>

    <Style TargetType="VerticalStackLayout" x:Key="TaskFieldStackLayout">
        <Setter Property="BackgroundColor" Value="{StaticResource FieldBackground}"/>
        <Setter Property="VerticalOptions" Value="Fill"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Padding" Value="20, 0, 0, 0"/>
    </Style>

    <Style TargetType="Grid" x:Key="RecordEditPageRootGrid">
        <Setter Property="Padding" Value="0, 40, 0, 0"/>
        <Setter Property="ColumnDefinitions" Value="*"/>
        <Setter Property="RowDefinitions" Value="Auto, 590, *"/>
    </Style>

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Background}"/>
    </Style>

    <Style TargetType="Page" x:Key="DiaryPage">
        <Setter Property="BackgroundColor" Value="{StaticResource DiaryBackground}"/>
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.NavBarHasShadow" Value="False"/>
        <Setter Property="Shell.NavBarIsVisible" Value="False"/>
        <Setter Property="Shell.TabBarIsVisible" Value="False"/>
        <Setter Property="Shell.FlyoutBehavior" Value="Disabled"/>
    </Style>

</ResourceDictionary>