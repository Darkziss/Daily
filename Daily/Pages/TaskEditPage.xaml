<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Daily.Pages.TaskEditPage">
    
    <VerticalStackLayout
        Spacing="20"
        Margin="20, 40, 0, 0">

        <Label
            Style="{StaticResource Headline}"
            FontSize="30"
            Text="Создание задачи"/>

        <Entry
            FontSize="20"
            Placeholder="Действие"
            Keyboard="Text"
            MaxLength="50"
            WidthRequest="350"
            VerticalOptions="Start"
            HorizontalOptions="Start"/>

        <VerticalStackLayout
            VerticalOptions="Start"
            HorizontalOptions="Start"
            RadioButtonGroup.GroupName="Priority">

            <Label
                FontSize="20"
                Text="Приоритет"/>

            <RadioButton
                FontSize="16"
                Content="Ежедневная"
                IsChecked="True"
                Margin="-5, 0, 0, 0"/>

            <RadioButton
                Content="Обязательная"
                Margin="-5, 0, 0, 0"/>

            <RadioButton
                Content="Важная"
                Margin="-5, 0, 0, 0"/>

            <RadioButton
                Content="Обычная"
                Margin="-5, 0, 0, 0"/>

        </VerticalStackLayout>

        <Grid
            ColumnDefinitions="Auto, Auto"
            RowDefinitions="Auto, Auto"
            ColumnSpacing="10"
            RowSpacing="-5"
            BackgroundColor="Red"
            WidthRequest="350"
            VerticalOptions="Start"
            HorizontalOptions="Start">

            <Label
                FontSize="20"
                Text="Сколько раз в день нужно выполнить задачу? (максимум 3 раза)"
                LineBreakMode="WordWrap"
                WidthRequest="350"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Grid.ColumnSpan="2"
                Grid.Row="0"/>

            <Stepper
                Value="1"
                Maximum="3"
                Minimum="1"
                VerticalOptions="End"
                HorizontalOptions="Start"
                Grid.Column="0"
                Grid.Row="1"/>

            <Label
                FontSize="40"
                Text="1"
                VerticalOptions="End"
                HorizontalOptions="End"
                Grid.Column="1"
                Grid.Row="1"/>

        </Grid>

        <HorizontalStackLayout
            Margin="0, 10, 0, 0"
            BackgroundColor="Green"
            WidthRequest="350"
            VerticalOptions="Start"
            HorizontalOptions="Start">

            <Stepper
                Value="1"
                Maximum="3"
                Minimum="1"
                VerticalOptions="Center"/>
            
            <Label
                FontSize="40"
                Text="1"
                VerticalOptions="End"
                HorizontalOptions="Start"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                BackgroundColor="Red"/>

        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>