<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:viewmodels="clr-namespace:Daily.ViewModels"
    xmlns:converters="clr-namespace:Daily.Converters"
    x:DataType="viewmodels:GoalEditPageViewModel"
    x:Class="Daily.Pages.GoalEditPage">

    <ContentPage.Resources>

        <ResourceDictionary>

            <converters:DateOnlyToDateTimeConverter
                x:Key="DateOnlyToDateTimeConverter"/>

            <Style TargetType="DatePicker" x:Key="DeadlineDatePicker">
                <Setter Property="Format" Value="d"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="Margin" Value="0, 0, 0, -2.5"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="Scale" Value="1.2"/>
                <Setter Property="Color" Value="Black"/>
            </Style>
            
        </ResourceDictionary>
        
    </ContentPage.Resources>
    
    <Grid
        ColumnDefinitions="*"
        RowDefinitions="Auto, *">

        <VerticalStackLayout
            Spacing="15"
            Padding="{StaticResource RootPadding}"
            Grid.Column="0"
            Grid.Row="0">

            <Label
                Style="{StaticResource LongHeadline}"
                Text="Изменение цели"
                Margin="{StaticResource HeadlineMargin}"/>

            <VerticalStackLayout
                Style="{StaticResource TaskFieldStackLayout}">

                <Label
                    Text="Цель"/>
                    Style="{StaticResource FieldHeader}"

                <Entry
                    Style="{StaticResource FieldEntry}"
                    Placeholder="Напишите цель"
                    Text="{Binding Goal, Mode=TwoWay}"/>
            </VerticalStackLayout>

            <Grid
                Style="{StaticResource FieldGrid}"
                ColumnDefinitions="270, 80"
                RowDefinitions="Auto, 50">

                <Label
                    Style="{StaticResource FieldHeader}"
                    Text="Дедлайн (необязательно)"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"/>

                <Border
                    Style="{StaticResource PickerContainer}"
                    Grid.Column="0"
                    Grid.Row="1">

                    <DatePicker
                        Style="{StaticResource DeadlineDatePicker}"
                        IsEnabled="{Binding NeedDeadline}"
                        MinimumDate="{Binding MinimumDeadlineDate, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                        Date="{Binding Deadline, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"/>
                </Border>

                <VerticalStackLayout
                    Spacing="-3"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Grid.Column="1"
                    Grid.RowSpan="2">

                    <CheckBox
                        IsChecked="{Binding NeedDeadline, Mode=TwoWay}"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                    <Label
                        Text="Нужен?"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>

        <Button
            IsEnabled="{Binding CanSave}"
            Style="{StaticResource TaskBottomButton}"
            Text="Сохранить"
            Command="{Binding SaveCommand, Mode=OneTime}"
            Grid.Column="0"
            Grid.Row="1"/>
    </Grid>
</ContentPage>